<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.githang.statusbar.demo.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>
    <com.larswerkman.holocolorpicker.ColorPicker
        android:id="@+id/picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.larswerkman.holocolorpicker.SVBar
        android:id="@+id/svbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ToggleButton
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="translucent_false"
        android:textOn="translucent_true"/>
    <Button
        android:id="@+id/no_action_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO_ACTION_BAR"/>
    <Button
        android:id="@+id/snack_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SNACK_BAR"/>
</LinearLayout>
